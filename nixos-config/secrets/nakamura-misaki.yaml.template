# nakamura-misaki v4.0.0 Secrets Template
#
# 使用方法:
# 1. このファイルをコピー: cp nakamura-misaki.yaml.template nakamura-misaki.yaml
# 2. 各値を実際の値に置き換える
# 3. sopsで暗号化: sops -e nakamura-misaki.yaml > nakamura-misaki.enc.yaml
# 4. 暗号化ファイルをコミット: git add nakamura-misaki.enc.yaml

nakamura-misaki:
  # PostgreSQL接続URL
  # Format: postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DATABASE
  DATABASE_URL: "postgresql+asyncpg://nakamura_misaki:YOUR_DB_PASSWORD@localhost:5432/nakamura_misaki"

  # Slack User Token（重要: BotトークンではなくUserトークンを使用）
  # 中村美咲は人格として動作するため、xoxp- で始まるUser Tokenが必要
  # 取得方法: https://api.slack.com/apps -> Your App -> OAuth & Permissions -> User OAuth Token
  # Scopes必要: chat:write, users:read, im:write
  SLACK_BOT_TOKEN: "xoxp-YOUR-SLACK-USER-TOKEN"

  # Anthropic API Key
  # 取得方法: https://console.anthropic.com/settings/keys
  ANTHROPIC_API_KEY: "sk-ant-YOUR-ANTHROPIC-API-KEY"

  # PM User ID (あなたのSlack User ID)
  # 取得方法: Slackプロフィール -> その他 -> メンバーIDをコピー
  PM_USER_ID: "U01ABC123"
